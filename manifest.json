{
    "manifest_version": 3,
    "name": "PinFix for X",
    "version": "1.0",
    "description": "Fixes the Pinterest save button on X.com to properly pin with post reference.",
    "permissions": [
        "activeTab",
        "webRequest"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.x.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "host_permissions": [
        "*://*.x.com/*"
    ]
}