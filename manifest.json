{
  "manifest_version": 3,
  "name": "PinFix",
  "version": "1.0",
  "description": "Fixes the Pinterest save button on X.com to properly pin with post reference.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/home/*",
        "https://x.com/i/bookmarks/*",
        "https://x.com/*"
      ],
      "js": [
        "js/pinit.js",
        "js/pinit_main.js",
        "js/content.js"
      ],
      "css": [
        "pinButtons.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://x.com/home/*",
    "https://x.com/i/bookmarks/*",
    "https://x.com/"
  ]
}